<div>
    <table class="table caption-top" id="pagination_example">
        <caption>List of users</caption>
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">UserName</th>
                <th scope="col">View profile</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            
            @foreach (var user in Model)
            {
                <tr>
                    <th scope="row">@user.Id</th>
                    <td>@user.UserName</td>
                    <td>
                        <a class="btn btn-outline-primary" asp-controller="User" asp-action="Detail" asp-route-id="@user.Id">
                            Details
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-outline-primary" asp-controller="EditUserProfile" asp-action="EditUserProfile" asp-route-id="@user.Id">
                            Edit
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-outline-primary border-danger" asp-controller="User" asp-action="UserDelete" asp-route-id="@user.Id">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>