@using Library.Domain.Entity
@model List<Publisher>

<h2>Publishers</h2>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Contact</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.ContactInfo</td>
                <td>
                    <a asp-controller="Publisher" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
                <td>
                    <a asp-route-id="@item.Id" data-toggle="modal" data-target="#myModal">Delete</a>

                    <!-- The Modal -->
                    <div class="modal fade" id="myModal">
                        <div class="modal-dialog">
                            <div class="modal-content">

                                <!-- Modal Header -->
                                <div class="modal-header">
                                    <h4 class="modal-title">Delete Publisher</h4>
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>

                                <!-- Modal body -->
                                <div class="modal-body">
                                    Are you sure you want to delete this Publisher?
                                </div>

                                <!-- Modal footer -->
                                <div class="modal-footer">
                                    <button asp-controller="Publisher" asp-action="Delete" asp-for="@item" method="post" type="submit" class="btn btn-danger" data-dismiss="modal">Delete</button>
                                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                                </div>

                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-controller="Publisher" asp-action="Create">Create New</a>
</p>
