@using Library.Domain.ViewModel.Country
@model List<CountryViewModel>


<h2>Countries</h2>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Country code</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Code</td>
                <td>
                    <a asp-controller="Country" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
                <td>
                    <a asp-controller="Country" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-controller="Country" asp-action="Create">Create New</a>
</p>
